log:
    level: {{ log_level }}
    format: json
identity:
    default_schema_id: {{ default_identity_schema_id }}
    schemas:
        {%- for schema_id, identity_schema in identity_schemas.items() %}
        - id: {{ schema_id }}
          url: '{{ identity_schema }}'
        {%- endfor %}
selfservice:
    {%- if allowed_return_urls %}
    allowed_return_urls:
    {%- for return_url in allowed_return_urls %}
        - {{ return_url }}
    {%- endfor %}
    {%- endif %}
    default_browser_return_url:
        {{ default_browser_return_url | d("http://example-default-return-url.com", true) }}
    {%- if error_ui_url or login_ui_url or oidc_providers %}
    flows:
        {%- if error_ui_url %}
        error:
            ui_url: {{ error_ui_url }}
        {%- endif %}
        {%- if login_ui_url %}
        login:
            ui_url: {{ login_ui_url }}
        {%- endif %}
        {%- if oidc_providers %}
        registration:
            after:
                oidc:
                    hooks:
                    - hook: session
        {%- endif %}
    {%- endif %}
    {%- if oidc_providers %}
    methods:
        password:
            enabled: false
        oidc:
            config:
                providers:
                {%- for provider in oidc_providers %}
                    {% set config = provider.config() %}
                    - {% for key, value in config.items() -%}
                      {{ key }}: {{ value }}
                      {% endfor -%}
                      {%- if not config["mapper_url"] and provider.provider in available_mappers %}
                      mapper_url: "file://{{ mappers_path }}/{{ provider.provider }}_schema.jsonnet"
                      {%- elif not config["mapper_url"] %}
                      mapper_url: "file://{{ mappers_path }}/default_schema.jsonnet"
                      {%- endif %}
                {%- endfor %}
            enabled: True
    {%- endif %}
dsn: postgres://{{ db_info.get('username') }}:{{ db_info.get('password') }}@{{ db_info.get('endpoints') }}/{{ db_info.get('database_name') }}
secrets:
    cookie:
    {%- for secret in cookie_secrets %}
        - {{ secret }}
    {%- endfor %}
courier:
    smtp:
        connection_uri: {{ smtp_connection_uri }}
serve:
    public:
        cors:
            enabled: true
        base_url: {{ public_base_url }}
{%- if oauth2_provider_url %}
oauth2_provider:
    url: {{ oauth2_provider_url }}
{%- endif %}
